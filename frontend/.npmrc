# =============================================================================
# NPM CONFIGURATION FOR IMAGEANALYZER FRONTEND
# =============================================================================
# This ensures consistent dependency resolution across environments

# Handle peer dependency conflicts gracefully
legacy-peer-deps=true

# Use exact versions when possible
save-exact=true

# Optimize for CI/CD environments
fund=false
audit=false

# Production optimizations
prefer-offline=true
cache-max=300

# Security settings
audit-level=moderate

# Registry configuration (use default npm registry)
registry=https://registry.npmjs.org/

# Package-lock settings
package-lock=true
package-lock-only=false

# Engine checks
engine-strict=true